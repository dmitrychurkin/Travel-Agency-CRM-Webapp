{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,

        "target": "es6",
        "module": "commonjs",
        
        "moduleResolution": "node",
        "sourceMap": false,
        "strictNullChecks": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "removeComments": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        
        "noEmitHelpers": false,
        "importHelpers": true,
        "lib": [
            "es2015", 
            "dom", 
            "dom.iterable", 
            "es2016", 
            "es2017", 
            "es2015.core", 
            "es2015.generator", 
            "es2015.iterable", 
            "es2015.collection",
            "es2015.promise",
            "es2015.symbol",
            "es2015.symbol.wellknown",
            "es2016.array.include",
            "es2017.object",
            "scripthost",
            "esnext"
        ],
        "outDir": "../dist"
    },
    "include": ["."],
    "exclude": [
        "node_modules",
        "client",
        "./*.json",
        "deprecated"
    ]
}