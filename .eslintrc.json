{
  "env": {
    "browser": true,
    "es6": true
  },
  "globals": {
    "ENV": true,
    "process": true,
    "TweenLite": true,
    "TimelineMax": true,
    "Sine": true,
    "WebFont": true,
    "imagesLoaded": true
  },
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "no-console": 0,
    "indent": [
      "error",
      4
    ],
    "linebreak-style": [
      "error",
      "windows"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}